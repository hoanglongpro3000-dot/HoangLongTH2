@model IEnumerable<HoangLongTH.Models.Customer>

@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* ================== Tổng thể ================== */
    body {
        background-color: #f4f6fb;
    }

    .page-header {
        border-left: 6px solid #0d6efd;
        padding-left: 15px;
        margin-bottom: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .page-header h2 {
            font-weight: 700;
            color: #0d6efd;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

    .btn-add {
        background: linear-gradient(90deg, #007bff, #00aaff);
        color: #fff !important;
        border: none;
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(0,123,255,0.3);
    }

        .btn-add:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #0056b3, #0099dd);
            box-shadow: 0 4px 12px rgba(0,123,255,0.4);
        }

    /* ================== Bảng ================== */
    .customer-card {
        background-color: #fff;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .customer-card:hover {
            transform: translateY(-3px);
        }

    .table thead {
        background: linear-gradient(90deg, #007bff, #00aaff);
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13,110,253,0.08);
        transition: background 0.2s ease;
    }

    .table td, .table th {
        vertical-align: middle !important;
    }

        .table td:first-child {
            font-weight: 600;
        }

    .badge-password {
        background: linear-gradient(45deg, #6c757d, #adb5bd);
        color: #fff;
        border-radius: 8px;
        padding: 6px 10px;
        font-size: 0.9rem;
        box-shadow: inset 0 1px 3px rgba(255,255,255,0.2);
    }

    /* ================== Nút hành động ================== */
    .btn-action {
        border-radius: 8px;
        padding: 6px 10px;
        font-weight: 600;
        color: #fff !important;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
    }

        .btn-action:hover {
            transform: scale(1.07);
            opacity: 0.9;
        }

    .btn-warning {
        background: #ffc107 !important;
    }

    .btn-info {
        background: #17a2b8 !important;
    }

    .btn-danger {
        background: #dc3545 !important;
    }

    /* ================== Hiệu ứng bảng & icon ================== */
    .table-icon {
        font-size: 1.1rem;
    }

    .card-footer {
        border-top: 1px solid #eaeaea;
        text-align: right;
        font-style: italic;
        color: #6c757d;
        margin-top: 10px;
    }
</style>

<div class="container mt-5">
    <div class="page-header">
        <h2><i class="bi bi-people-fill"></i> Quản lý khách hàng</h2>
        @Html.ActionLink("➕ Thêm khách hàng mới", "Create", null, new { @class = "btn btn-add shadow-sm" })
    </div>

    <div class="customer-card">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Mật khẩu</th>
                        <th style="width:190px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerName</td>
                            <td>@item.CustomerPhone</td>
                            <td>@item.CustomerEmail</td>
                            <td class="text-muted">@item.CustomerAddress</td>
                            <td><span class="badge-password">••••••</span></td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @Html.ActionLink("✏️ Sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn-action btn-warning text-white" })
                                    @Html.ActionLink("👁️ Xem", "Details", new { id = item.CustomerID }, new { @class = "btn-action btn-info text-white" })
                                    @Html.ActionLink("🗑️ Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn-action btn-danger text-white", onclick = "return confirm('Bạn có chắc muốn xóa khách hàng này không?');" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer">
            Tổng số khách hàng: @Model.Count()
        </div>
    </div>
</div>