@model HoangLongTH.Models.Customer

@{
    ViewBag.Title = "Xóa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .customer-delete-page {
        background: #f5f7fb;
        min-height: calc(100vh - 120px);
        padding-top: 20px;
        padding-bottom: 40px;
    }

    .delete-card {
        border-radius: 14px;
    }

    .delete-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 18px 22px;
        border-bottom: 3px solid #ffd700;
        border-radius: 12px 12px 0 0;
    }

    .delete-warning {
        background: rgba(255, 75, 75, 0.12);
        border-left: 5px solid #dc3545;
        padding: 14px 16px;
        border-radius: 6px;
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .info-label {
        font-weight: bold;
        color: #333;
    }

    .value-box {
        display: inline-block;
        padding: 8px 12px;
        background: #f1f3f5;
        border-radius: 8px;
        color: #333;
        font-weight: 500;
        margin-bottom: 10px;
    }

    .btn-delete {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
        border-radius: 8px;
        padding: 10px 18px;
        font-weight: 600;
        border: none;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255, 80, 80, 0.3);
        }

    .btn-back {
        border-radius: 8px;
        padding: 10px 18px;
        font-weight: 600;
    }
</style>

<div class="customer-delete-page">
    <div class="container-fluid">

        <div class="card shadow-sm delete-card">

            <!-- HEADER -->
            <div class="delete-header">
                <h4 class="mb-0">
                    <i class="fas fa-user-slash"></i> Xác Nhận Xóa Khách Hàng
                </h4>
            </div>

            <div class="card-body">

                <!-- WARNING BOX -->
                <div class="delete-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Bạn có chắc chắn muốn xóa khách hàng này?
                    <br />
                    <small>Hành động này <strong>không thể hoàn tác</strong> và có thể ảnh hưởng đến lịch sử đơn hàng.</small>
                </div>

                <!-- CUSTOMER INFO -->
                <div class="mb-3">
                    <span class="info-label">Họ tên khách hàng:</span><br />
                    <span class="value-box">
                        <i class="fas fa-user"></i> @Model.CustomerName
                    </span>
                </div>

                <div class="mb-3">
                    <span class="info-label">Số điện thoại:</span><br />
                    <span class="value-box">
                        <i class="fas fa-phone"></i> @Model.CustomerPhone
                    </span>
                </div>

                <div class="mb-3">
                    <span class="info-label">Email:</span><br />
                    <span class="value-box">
                        <i class="fas fa-envelope"></i> @Model.CustomerEmail
                    </span>
                </div>

                <div class="mb-3">
                    <span class="info-label">Địa chỉ:</span><br />
                    <span class="value-box" style="background:#fff; border:1px solid #e2e6ea;">
                        <i class="fas fa-map-marker-alt"></i> @Model.CustomerAddress
                    </span>
                </div>

                <div class="mb-3">
                    <span class="info-label">Tài khoản liên kết:</span><br />
                    @if (Model.User != null)
                    {
                        <span class="value-box">
                            <i class="fas fa-user-circle"></i> @Model.Username
                        </span>
                        <br />
                        <span class="value-box" style="background:#fce4ec; color:#c2185b;">
                            <i class="fas fa-lock"></i> Mật khẩu: •••••••• (ẩn)
                        </span>
                    }
                    else
                    {
                        <span class="value-box">
                            <i class="fas fa-user-slash"></i> Không liên kết tài khoản đăng nhập
                        </span>
                    }
                </div>

                <!-- ACTION BUTTONS -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mt-4 text-right">
                        <button type="submit" class="btn btn-delete">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>

                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-back ml-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
