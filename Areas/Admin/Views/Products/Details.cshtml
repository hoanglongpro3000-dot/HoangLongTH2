@model HoangLongTH.Models.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .product-details-page {
        background: #f5f7fb;
        min-height: calc(100vh - 120px);
        padding-top: 20px;
        padding-bottom: 40px;
    }

    .product-card,
    .product-sidebar {
        border-radius: 14px;
    }

        .product-card .card-header {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: #fff;
            border-bottom: 3px solid #ffd700;
            border-radius: 12px 12px 0 0;
        }

    .info-label {
        font-weight: 700;
        font-size: 15px;
        color: #34495e;
    }

    .info-value {
        background: #f1f3f5;
        padding: 10px 14px;
        border-radius: 10px;
        font-weight: 600;
        color: #333;
        display: inline-block;
        margin-bottom: 12px;
    }

    .price-box {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        padding: 12px 18px;
        color: white;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 700;
        display: inline-block;
    }

    .img-preview-box {
        border-radius: 12px;
        background: #fff;
        padding: 10px;
        border: 1px solid #e2e6ea;
        text-align: center;
    }

        .img-preview-box img {
            max-width: 100%;
            max-height: 330px;
            border-radius: 12px;
            object-fit: contain;
        }

    .btn-back,
    .btn-edit {
        border-radius: 10px;
        padding: 10px 20px;
        font-weight: 600;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: #fff;
        border: none;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(245, 87, 108, 0.3);
        }

    .btn-back {
        background: #6c757d;
        color: #fff;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
</style>

<div class="product-details-page">
    <div class="container-fluid">

        <!-- HEADER -->
        <div class="row mb-3">
            <div class="col-md-8">
                <small class="text-muted">
                    Trang quản trị / Sản phẩm / <strong>Chi tiết</strong>
                </small>

                <h3 class="mt-2 mb-1 text-primary">
                    <i class="fas fa-box-open"></i> Chi Tiết Sản Phẩm
                </h3>

                <p class="text-muted mb-0">
                    Xem các thông tin chi tiết của sản phẩm như tên, mô tả, giá bán và danh mục.
                </p>
            </div>
        </div>

        <div class="row">

            <!-- THÔNG TIN SẢN PHẨM -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm product-card">
                    <div class="card-header">
                        <strong>Thông Tin Sản Phẩm</strong>
                    </div>

                    <div class="card-body">

                        <!-- Product Name -->
                        <div class="mb-3">
                            <span class="info-label">Tên sản phẩm:</span><br />
                            <span class="info-value">
                                <i class="fas fa-tag"></i> @Model.ProductName
                            </span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <span class="info-label">Mô tả:</span><br />
                            <span class="info-value" style="background:#fff; border:1px solid #e2e6ea;">
                                @Model.ProductDecription
                            </span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <span class="info-label">Giá bán:</span><br />
                            <span class="price-box">
                                <i class="fas fa-coins"></i>
                                @Model.ProductPrice.ToString("N0") ₫
                            </span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <span class="info-label">Danh mục:</span><br />
                            <span class="info-value">
                                <i class="fas fa-layer-group"></i> @Model.Category.CategoryName
                            </span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            <span class="info-label">Link hình ảnh:</span><br />
                            <span class="info-value">@Model.ProductImage</span>
                        </div>

                    </div>

                    <div class="card-footer text-right">
                        <a href="@Url.Action("Edit", new { id = Model.ProductID })" class="btn btn-edit mr-2">
                            <i class="fas fa-edit"></i> Chỉnh sửa
                        </a>

                        <a href="@Url.Action("Index")" class="btn btn-back">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>

            <!-- XEM TRƯỚC HÌNH ẢNH -->
            <div class="col-lg-4">
                <div class="card shadow-sm product-sidebar">
                    <div class="card-header bg-white border-0">
                        <strong><i class="fas fa-image"></i> Hình ảnh sản phẩm</strong>
                    </div>

                    <div class="card-body">
                        <div class="img-preview-box">
                            <img src="@Model.ProductImage" alt="Product Image" />
                        </div>

                        <small class="text-muted d-block mt-2">
                            Hình ảnh hiển thị đúng theo link bạn đã nhập trong thông tin sản phẩm.
                        </small>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
