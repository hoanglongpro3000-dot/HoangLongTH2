@model HoangLongTH.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<style>
    
 
    .delete-page {
        background: #f5f7fb;
        min-height: calc(100vh - 120px);
        padding-top: 20px;
        padding-bottom: 40px;
    }

    .delete-card {
        border-radius: 14px;
    }

    .delete-warning {
        background: rgba(255, 0, 0, 0.08);
        border-left: 4px solid #dc3545;
        border-radius: 6px;
        padding: 12px 16px;
        margin-bottom: 20px;
        color: #dc3545;
        font-weight: 600;
    }

    .product-img-preview {
        width: 100%;
        max-width: 260px;
        border-radius: 10px;
        border: 1px solid #ddd;
        padding: 6px;
        background: #fff;
        object-fit: cover;
    }

    .info-label {
        font-weight: bold;
        color: #444;
    }

    .info-value {
        color: #666;
    }
</style>

<div class="delete-page">
    <div class="container-fluid">

        <!-- TITLE -->
        <h3 class="mb-4 text-primary">
            <i class="fas fa-trash-alt"></i> Xóa Sản Phẩm
        </h3>

        <!-- CARD -->
        <div class="card shadow-sm delete-card">
            <div class="card-header bg-primary text-white">
                <strong>Xác Nhận Xóa Sản Phẩm</strong>
            </div>

            <div class="card-body">

                <!-- WARNING -->
                <div class="delete-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Bạn có chắc chắn muốn xóa sản phẩm này?
                    <br />
                    <small>Thao tác này không thể hoàn tác.</small>
                </div>

                <div class="row">

                    <!-- IMAGE PREVIEW -->
                    <div class="col-md-4 mb-3 text-center">
                        <img src="@Model.ProductImage"
                             alt="Product Image"
                             class="product-img-preview" />
                    </div>

                    <!-- PRODUCT INFO -->
                    <div class="col-md-8">
                        <div class="mb-3">
                            <span class="info-label">Tên sản phẩm:</span><br />
                            <span class="info-value">@Html.DisplayFor(m => m.ProductName)</span>
                        </div>

                        <div class="mb-3">
                            <span class="info-label">Mô tả:</span><br />
                            <span class="info-value">@Html.DisplayFor(m => m.ProductDecription)</span>
                        </div>

                        <div class="mb-3">
                            <span class="info-label">Giá bán:</span><br />
                            <span class="info-value">@string.Format("{0:N0} đ", Model.ProductPrice)</span>
                        </div>

                        <div class="mb-3">
                            <span class="info-label">Danh mục:</span><br />
                            <span class="info-value">@Html.DisplayFor(m => m.Category.CategoryName)</span>
                        </div>
                    </div>

                </div>

                <!-- DELETE BUTTONS -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa sản phẩm
                        </button>

                        <a href="@Url.Action("Index")" class="btn btn-secondary ml-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                }

            </div>
        </div>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
