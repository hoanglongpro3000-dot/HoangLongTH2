@model IEnumerable<HoangLongTH.Models.User>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --success-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --danger-gradient: linear-gradient(135deg, #ee0979 0%, #ff6a00 100%);
        --warning-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --dark-gradient: linear-gradient(135deg, #434343 0%, #000000 100%);
    }

    .page-header-box {
        background: var(--primary-gradient);
        padding: 2.5rem;
        border-radius: 20px;
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .page-header-box::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 15s ease-in-out infinite;
    }

    keyframes pulse {
        0%, 100% { transform: scale(1) rotate(0deg); }
        50% { transform: scale(1.1) rotate(180deg); }
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        position: relative;
        z-index: 1;
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.95;
        position: relative;
        z-index: 1;
    }

    .main-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: white;
        animation: fadeInUp 0.6s ease-out;
    }

    .main-card:hover {
        box-shadow: 0 20px 50px rgba(0,0,0,0.15) !important;
        transform: translateY(-5px);
    }

    .gradient-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 1.5rem 2rem;
        border: none;
    }

    .btn-add {
        background: var(--success-gradient);
        border: none;
        padding: 0.7rem 1.5rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(56, 239, 125, 0.3);
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(56, 239, 125, 0.4);
    }

    .modern-table thead {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .badge-number {
        background: var(--primary-gradient);
        color: white;
        padding: 0.5rem 0.8rem;
        border-radius: 10px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .badge-password {
        background: var(--dark-gradient);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .badge-admin {
        background: var(--danger-gradient);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        box-shadow: 0 3px 10px rgba(238, 9, 121, 0.3);
    }

    .badge-user {
        background: var(--info-gradient);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 12px;
        font-weight: 700;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
    }

    .btn-action {
        padding: 0.6rem 1rem;
        border-radius: 10px;
        border: none;
        transition: all 0.3s ease;
        font-weight: 600;
    }

    .btn-info { background: var(--info-gradient); color: white; }
    .btn-warning { background: var(--warning-gradient); color: white; }
    .btn-danger { background: var(--danger-gradient); color: white; }
</style>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="page-header-box">
                <h2 class="page-title">
                    <i class="fas fa-users-cog"></i> Quản lý người dùng hệ thống
                </h2>
                <p class="page-subtitle">
                    <i class="fas fa-info-circle"></i> Quản lý tài khoản và phân quyền người dùng
                </p>
            </div>
        </div>
    </div>

    <div class="card main-card shadow-lg">
        <div class="card-header gradient-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0"><i class="fas fa-list-ul"></i> Danh sách người dùng</h4>
                    <small><i class="fas fa-database"></i> Tổng: <strong>@Model.Count()</strong> người dùng</small>
                </div>
                <a href="@Url.Action("Create")" class="btn btn-success btn-add">
                    <i class="fas fa-user-plus"></i> Thêm người dùng mới
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover modern-table mb-0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên đăng nhập</th>
                            <th>Mật khẩu</th>
                            <th>Vai trò</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }

                        @foreach (var item in Model)
                        {
                            var role = item.UserRole == null ? "" : item.UserRole.Trim().ToUpper();

                            <tr>
                                <td class="text-center">
                                    <span class="badge badge-number">@stt</span>
                                </td>

                                <td>
                                    <i class="fas fa-user text-primary"></i>
                                    <strong class="ms-2">@item.Username</strong>
                                </td>

                                <td>
                                    <span class="badge badge-password"><i class="fas fa-lock"></i> ••••••••</span>
                                </td>

                                <td>
                                    @if (role == "A")
                                    {
                                        <span class="badge badge-admin"><i class="fas fa-user-shield"></i> Admin</span>
                                    }
                                    else if (role == "C")
                                    {
                                        <span class="badge badge-user"><i class="fas fa-user"></i> Khách hàng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-question-circle"></i> Không rõ
                                        </span>
                                    }
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="@Url.Action("Details", new { id = item.Username })" class="btn btn-sm btn-action btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @* Chỉ admin mới có quyền sửa *@
                                        @if (role == "A")
                                        {
                                            <a href="@Url.Action("Edit", new { id = item.Username })" class="btn btn-sm btn-action btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        <a href="@Url.Action("Delete", new { id = item.Username })"
                                           class="btn btn-sm btn-action btn-danger"
                                           onclick="return confirm('Bạn chắc chắn muốn xóa?');">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>

                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
            <small class="text-muted">
                <i class="fas fa-clock"></i> Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
            </small>
            <small class="text-muted">
                <i class="fas fa-copyright"></i> HoangLongTH Management System
            </small>
        </div>
    </div>
</div>
