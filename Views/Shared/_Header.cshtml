    <script>
        // Load cart count từ localStorage hoặc API
        function loadCartCount() {
            // Lấy từ localStorage
            let count = localStorage.getItem('cartCount') || 0;
            updateCartDisplay(parseInt(count));

            // Hoặc fetch từ server
            fetch('/Cart/GetCartCount')
                .then(res => res.json())
                .then(data => {
                    updateCartDisplay(data.count);
                    localStorage.setItem('cartCount', data.count);
                })
                .catch(err => console.log('Cart count error:', err));
        }

        function updateCartDisplay(count) {
            const cartCountEl = document.getElementById('cartCount');
            if (cartCountEl) {
                cartCountEl.textContent = count;

                // Add bounce animation
                cartCountEl.classList.add('updated');
                setTimeout(() => {
                    cartCountEl.classList.remove('updated');
                }, 500);
            }
        }

        function incrementCartCount() {
            let count = parseInt(localStorage.getItem('cartCount') || 0);
            count++;
            localStorage.setItem('cartCount', count);
            updateCartDisplay(count);
        }

        // Load khi trang load
        document.addEventListener('DOMContentLoaded', function () {
            loadCartCount();

            // Reload count mỗi 30 giây
            setInterval(loadCartCount, 30000);
        });

        // Export function để gọi từ các trang khác
        window.incrementCartCount = incrementCartCount;
        window.loadCartCount = loadCartCount;
    </script>

