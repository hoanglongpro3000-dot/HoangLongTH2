@model HoangLongTH.Models.Cart
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal tong = 0m;
}

<style>
    /* ================================
       ANIMATIONS
       ================================ */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes scaleIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -1000px 0;
        }

        100% {
            background-position: 1000px 0;
        }
    }

    /* ================================
       MAIN LAYOUT
       ================================ */
    .checkout-wrap {
        max-width: 1200px;
        margin: 30px auto;
        padding: 0 15px;
        position: relative;
        z-index: 1;
        padding-top: 150px; /* ✅ tránh bị header đè khi cuộn xuống */
    }

    /* ================================
       CART CARD
       ================================ */
    .cart-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,.08);
        overflow: hidden;
        transition: all 0.3s ease;
        animation: fadeInRight 0.6s ease-out;
    }

    .cart-head {
        padding: 24px 28px;
        background: linear-gradient(135deg, #ee4d2d 0%, #ff6433 100%);
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

        .cart-head::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            animation: shimmer 4s infinite;
        }

        .cart-head h3 {
            color: white;
            margin: 0;
            font-weight: 700;
            font-size: 1.5rem;
            z-index: 1;
            position: relative;
        }

        .cart-head .btn-link {
            color: white;
            opacity: 0.9;
            text-decoration: none;
            z-index: 1;
            position: relative;
            transition: 0.3s;
        }

            .cart-head .btn-link:hover {
                opacity: 1;
                transform: translateX(-5px);
            }

    /* ================================
       CART ITEMS
       ================================ */
    .cart-item {
        display: grid;
        grid-template-columns: 100px 1fr 140px 140px;
        gap: 16px;
        align-items: center;
        padding: 20px 28px;
        border-bottom: 1px solid #f0f0f0;
        transition: 0.3s;
        animation: fadeInUp 0.4s ease-out backwards;
    }

        .cart-item:hover {
            background: #fff5f3;
            transform: translateX(5px);
        }

        .cart-item.header {
            background: #f8f9fa;
            font-weight: 600;
            color: #6c757d;
            font-size: 0.9rem;
            border-bottom: 2px solid #eee;
            text-transform: uppercase;
        }

            .cart-item.header div:nth-child(2) {
                text-align: left;
                padding-left: 8px;
            }

            .cart-item.header div:nth-child(3),
            .cart-item.header div:nth-child(4) {
                text-align: right;
            }

    .thumb {
        width: 72px;
        height: 72px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid #f1f1f1;
        box-shadow: 0 2px 8px rgba(0,0,0,.05);
        transition: 0.3s;
    }

    .cart-item:hover .thumb {
        transform: scale(1.1) rotate(3deg);
        border-color: #ee4d2d;
    }

    .prod-name {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 6px;
    }

    .prod-quantity {
        display: inline-flex;
        align-items: center;
        background: #fff1ec;
        color: #ee4d2d;
        border-radius: 20px;
        padding: 3px 10px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .price {
        text-align: right;
        color: #4a5568;
    }

    .total-price {
        text-align: right;
        color: #ee4d2d;
        font-weight: 700;
    }

    /* ================================
       SUMMARY
       ================================ */
    .summary {
        background: linear-gradient(135deg, #fff5f3 0%, #fff 100%);
        border-radius: 20px;
        animation: fadeInLeft 0.6s ease-out;
    }

    .summary-card {
        background: white;
        border-radius: 16px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(238,77,45,.1);
        position: relative;
    }

        .summary-card h4 {
            color: #2d3748;
            font-weight: 700;
            margin-bottom: 24px;
            font-size: 1.3rem;
        }

    .form-label {
        font-weight: 600;
        color: #4a5568;
        margin-bottom: 8px;
    }

    .form-control, .form-select {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px 16px;
        transition: 0.3s;
        width: 100%;
    }

        .form-control:focus, .form-select:focus {
            border-color: #ee4d2d;
            box-shadow: 0 0 0 3px rgba(238,77,45,.1);
            transform: translateY(-2px);
        }

    .form-check {
        padding: 14px 18px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        margin-bottom: 10px;
        transition: 0.3s;
        cursor: pointer;
    }

        .form-check:hover {
            border-color: #ee4d2d;
            background: #fff5f3;
            transform: translateX(5px);
        }

    .form-check-input:checked + .form-check-label {
        color: #ee4d2d;
        font-weight: 600;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        color: #4a5568;
    }

        .summary-row.total {
            font-weight: 700;
            font-size: 1.3rem;
            border-top: 2px dashed #e2e8f0;
            margin-top: 10px;
        }

            .summary-row.total .amount {
                background: linear-gradient(135deg, #ee4d2d, #ff6433);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

    .btn-order {
        background: linear-gradient(135deg, #ee4d2d, #ff6433);
        border: none;
        border-radius: 12px;
        padding: 16px;
        font-size: 1.1rem;
        font-weight: 700;
        color: white;
        width: 100%;
        margin-top: 20px;
        box-shadow: 0 4px 15px rgba(238,77,45,.3);
        transition: 0.3s;
    }

        .btn-order:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(238,77,45,.4);
        }

    .empty-cart {
        text-align: center;
        padding: 60px 30px;
    }

    .empty-cart-icon {
        font-size: 4rem;
        opacity: 0.6;
        animation: bounce 2s infinite;
    }
</style>

<div class="checkout-wrap">
    <div class="row">
        <div class="col-md-8">
            <div class="cart-card">
                <div class="cart-head">
                    <h3>🛒 Giỏ hàng của bạn</h3>
                    <a class="btn-link" href="@Url.Action("Index","Cart")">← Quay lại giỏ hàng</a>
                </div>

                <div class="cart-body">
                    @if (Model == null || Model.CartItem == null || !Model.CartItem.Any())
                    {
                        <div class="empty-cart">
                            <div class="empty-cart-icon">🛍️</div>
                            <p>Giỏ hàng của bạn đang trống</p>
                            <a href="@Url.Action("Index","Product")" class="btn">Khám phá sản phẩm</a>
                        </div>
                    }
                    else
                    {
                        <div class="cart-item header">
                            <div></div>
                            <div>Sản phẩm</div>
                            <div>Đơn giá</div>
                            <div>Thành tiền</div>
                        </div>

                        foreach (var i in Model.CartItem)
                        {
                            var unit = i.UnitPrice != 0 ? i.UnitPrice : (i.Product?.ProductPrice ?? 0);
                            var line = unit * i.Quantity;
                            tong += line;
                            var name = i.Product?.ProductName ?? "Sản phẩm";
                            var img = i.Product?.ProductImage ?? Url.Content("~/Content/img/no-image.png");

                            <div class="cart-item">
                                <img class="thumb" src="@img" alt="@name" />
                                <div>
                                    <div class="prod-name">@name</div>
                                    <span class="prod-quantity">× @i.Quantity</span>
                                </div>
                                <div class="price">@unit.ToString("n0") đ</div>
                                <div class="total-price">@line.ToString("n0") đ</div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="summary">
                <div class="summary-card">
                    <h4>🚚 Thông tin giao hàng</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @using (Html.BeginForm("Checkout", "Order", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ nhận hàng</label>
                            <textarea name="addressDelivery" class="form-control" required placeholder="Số nhà, đường, phường/xã, quận/huyện, tỉnh/thành phố"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" value="COD" id="pmCOD" checked />
                                <label class="form-check-label" for="pmCOD">💵 Thanh toán khi nhận hàng (COD)</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" value="PAID" id="pmPAID" />
                                <label class="form-check-label" for="pmPAID">💳 Chuyển khoản trước</label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ghi chú (tùy chọn)</label>
                            <input name="note" class="form-control" placeholder="Ví dụ: giao giờ hành chính, gọi trước khi đến..." />
                        </div>

                        <div class="summary-row subtotal">
                            <span>Tạm tính</span><strong>@tong.ToString("n0") đ</strong>
                        </div>
                        <div class="summary-row shipping">
                            <span>Phí vận chuyển</span><span class="badge bg-success text-white">Miễn phí</span>
                        </div>
                        <div class="summary-row total">
                            <span>Tổng cộng</span><span class="amount">@tong.ToString("n0") đ</span>
                        </div>

                        <button type="submit" class="btn-order">Đặt hàng ngay 🚀</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
