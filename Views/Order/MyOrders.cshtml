@model IEnumerable<HoangLongTH.Models.Order>
@{
    ViewBag.Title = "Đơn hàng của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int page = ViewBag.Page ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int total = ViewBag.Total ?? (Model?.Count() ?? 0);
    int totalPages = (int)Math.Ceiling((double)total / pageSize);
    Func<string, string> statusClass = s =>
        s == "Đã thanh toán" ? "badge-success" :
        s != null && s.ToLower().Contains("chưa") ? "badge-warning" : "badge-secondary";
}

<style>
    @@keyframes gradient-shift {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }
    }

    @@keyframes shimmer {
        0% {
            background-position: -1000px 0;
        }

        100% {
            background-position: 1000px 0;
        }
    }

    @@keyframes pulse-glow {
        0%, 100% {
            box-shadow: 0 0 20px rgba(238, 77, 45, 0.3);
        }

        50% {
            box-shadow: 0 0 40px rgba(238, 77, 45, 0.6);
        }
    }

    body {
        background: linear-gradient(-45deg, #ee4d2d, #ff6b35, #f94c10, #ff8849);
        background-size: 400% 400%;
        animation: gradient-shift 15s ease infinite;
        min-height: 100vh;
    }

    .orders-wrap {
        max-width: 1100px;
        margin: 20px auto;
        padding: 0 15px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
        animation: float 3s ease-in-out infinite;
    }

        .page-header h1 {
            color: #fff;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            margin-bottom: 10px;
        }

        .page-header .subtitle {
            color: #fff;
            font-size: 1.1rem;
            opacity: 0.9;
        }

    .table-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0,0,0,.15);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .table-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0,0,0,.2);
        }

        .table-card .head {
            background: linear-gradient(135deg, #ee4d2d 0%, #ff6b35 100%);
            padding: 25px 30px;
            position: relative;
            overflow: hidden;
        }

            .table-card .head::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient( 45deg, transparent, rgba(255,255,255,0.1), transparent );
                animation: shimmer 3s infinite;
            }

            .table-card .head h3 {
                color: #fff;
                font-weight: 700;
                font-size: 1.5rem;
                position: relative;
                z-index: 1;
            }

            .table-card .head .total-badge {
                background: rgba(255,255,255,0.25);
                color: #fff;
                padding: 8px 16px;
                border-radius: 20px;
                font-weight: 600;
                backdrop-filter: blur(10px);
                position: relative;
                z-index: 1;
            }

    .table > thead {
        background: linear-gradient(135deg, #fff5f3 0%, #ffe8e4 100%);
    }

        .table > thead th {
            white-space: nowrap;
            color: #ee4d2d;
            font-weight: 700;
            border: none;
            padding: 18px 12px;
        }

    .table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f5f5f5;
    }

        .table tbody tr:hover {
            background: linear-gradient(135deg, #fff5f3 0%, #ffe8e4 100%);
            transform: scale(1.01);
            box-shadow: 0 4px 12px rgba(238, 77, 45, 0.1);
        }

    .table tbody td {
        padding: 18px 12px;
        vertical-align: middle;
    }

    .order-id {
        color: #ee4d2d;
        font-weight: 700;
        font-size: 1.05rem;
    }

    .badge-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: #fff;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        animation: pulse-glow 2s infinite;
    }

    .badge-warning {
        background: linear-gradient(135deg, #ffc107 0%, #ffb300 100%);
        color: #000;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
    }

    .badge-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
        color: #fff;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
    }

    .btn-outline-primary {
        color: #ee4d2d;
        border: 2px solid #ee4d2d;
        border-radius: 20px;
        padding: 6px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #ee4d2d 0%, #ff6b35 100%);
            border-color: #ee4d2d;
            color: #fff;
            transform: scale(1.1);
            box-shadow: 0 4px 15px rgba(238, 77, 45, 0.4);
        }

    .total-amount {
        color: #ee4d2d;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .pager .pagination {
        gap: 8px;
    }

    .pager .page-link {
        border-radius: 12px;
        margin: 0;
        border: 2px solid #ee4d2d;
        color: #ee4d2d;
        font-weight: 600;
        padding: 8px 16px;
        transition: all 0.3s ease;
    }

        .pager .page-link:hover {
            background: linear-gradient(135deg, #ee4d2d 0%, #ff6b35 100%);
            border-color: #ee4d2d;
            color: #fff;
            transform: scale(1.1);
        }

    .pager .page-item.active .page-link {
        background: linear-gradient(135deg, #ee4d2d 0%, #ff6b35 100%);
        border-color: #ee4d2d;
        box-shadow: 0 4px 15px rgba(238, 77, 45, 0.4);
    }

    .pager .page-item.disabled .page-link {
        background: #e9ecef;
        border-color: #dee2e6;
        color: #6c757d;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

        .empty-state .icon {
            font-size: 5rem;
            margin-bottom: 20px;
            animation: float 3s ease-in-out infinite;
        }

        .empty-state .message {
            color: #6c757d;
            font-size: 1.2rem;
        }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 1.8rem;
        }

        .table {
            font-size: 0.9rem;
        }

        .table-card .head {
            padding: 20px 15px;
        }
    }
</style>

<div class="orders-wrap">
    <div class="page-header">
        <h1>🛍️ Đơn Hàng Của Tôi</h1>
        <p class="subtitle">Theo dõi và quản lý đơn hàng của bạn</p>
    </div>

    <div class="table-card">
        <div class="head d-flex justify-content-between align-items-center">
            <h3 class="m-0">📦 Lịch sử đơn hàng</h3>
            <span class="total-badge">Tổng: @total đơn</span>
        </div>

        <div class="p-3">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ngày đặt</th>
                            <th>Địa chỉ</th>
                            <th class="text-end">Tổng tiền</th>
                            <th>Thanh toán</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <div class="icon">📭</div>
                                        <p class="message">Chưa có đơn hàng nào. Hãy bắt đầu mua sắm ngay!</p>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var o in Model)
                            {
                                <tr>
                                    <td><span class="order-id">#@o.OrderID</span></td>
                                    <td>@o.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-truncate" style="max-width:360px" title="@o.AddressDelivery">@o.AddressDelivery</td>
                                    <td class="text-end"><span class="total-amount">@o.TotalAmount.ToString("n0") đ</span></td>
                                    <td>
                                        <span class="badge @statusClass(o.PaymentStatus)">@o.PaymentStatus</span>
                                    </td>
                                    <td class="text-center">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Details","Order", new { id = o.OrderID })">Chi tiết</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (totalPages > 1)
            {
                <nav class="pager d-flex justify-content-center mt-4">
                    <ul class="pagination">
                        <li class="page-item @(page==1?"disabled":"")">
                            <a class="page-link" href="@Url.Action("MyOrders", new { page = page-1, pageSize = pageSize })">«</a>
                        </li>
                        @for (int p = 1; p <= totalPages; p++)
                        {
                            <li class="page-item @(p==page?"active":"")">
                                <a class="page-link" href="@Url.Action("MyOrders", new { page = p, pageSize = pageSize })">@p</a>
                            </li>
                        }
                        <li class="page-item @(page==totalPages?"disabled":"")">
                            <a class="page-link" href="@Url.Action("MyOrders", new { page = page+1, pageSize = pageSize })">»</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>