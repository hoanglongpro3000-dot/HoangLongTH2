@model PagedList.IPagedList<HoangLongTH.Models.Product>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .category-page {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f5f5f5;
        min-height: 100vh;
        padding: 30px 0 50px;
    }

        .category-page h2 {
            text-align: center;
            color: #ee4d2d;
            font-size: 2.4rem;
            margin-bottom: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

    .category-subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 25px;
    }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0,0,0,0.06);
        transition: .2s;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }

        .product-card img {
            width: 100%;
            height: 220px;
            object-fit: contain;
            padding: 10px;
        }

    .product-body {
        padding: 10px 12px 12px;
    }

    .product-name {
        font-size: 0.95rem;
        height: 40px;
        overflow: hidden;
        margin-bottom: 6px;
    }

        .product-name a {
            color: #333;
            text-decoration: none;
        }

            .product-name a:hover {
                color: #ee4d2d;
            }

    .product-price {
        color: #ee4d2d;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .product-actions {
        display: flex;
        gap: 8px;
    }

    .btn-small {
        flex: 1;
        padding: 7px 8px;
        font-size: 0.8rem;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: 600;
    }

    .btn-detail {
        background: #fff;
        border: 1px solid #ee4d2d;
        color: #ee4d2d;
    }

        .btn-detail:hover {
            background: #fff3f0;
        }

    .btn-buy {
        background: #ee4d2d;
        color: #fff;
    }

        .btn-buy:hover {
            background: #d73211;
        }

    .pagination-container {
        text-align: center;
        margin-top: 30px;
    }

    .pagination {
        display: inline-flex;
        list-style: none;
        gap: 6px;
    }

        .pagination a,
        .pagination span {
            padding: 8px 12px;
            background: #fff;
            border-radius: 6px;
            text-decoration: none;
            color: #333;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            font-size: 0.9rem;
        }

        .pagination .active span {
            background: #ee4d2d;
            color: #fff;
        }
</style>

<div class="category-page">
    <h2>DANH SÁCH SẢN PHẨM</h2>
    <p class="category-subtitle">
        @ViewBag.CategoryName
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="product-grid">
            @foreach (var p in Model)
            {
                var img = string.IsNullOrWhiteSpace(p.ProductImage)
                    ? Url.Content("~/Content/imgs/no-image.png")
                    : Url.Content(p.ProductImage);

                <div class="product-card">
                    <a href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                        <img src="@img" alt="@p.ProductName" />
                    </a>
                    <div class="product-body">
                        <div class="product-name">
                            <a href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                @p.ProductName
                            </a>
                        </div>
                        <div class="product-price">
                            @String.Format("{0:N0} ₫", p.ProductPrice)
                        </div>
                        <div class="product-actions">
                            <button class="btn-small btn-buy" onclick="addToCart(@p.ProductID)">Mua ngay</button>
                            <a class="btn-small btn-detail"
                               href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, categoryId = Request["categoryId"] }))
        </div>
    }
    else
    {
        <p style="text-align:center; margin-top:40px;">Chưa có sản phẩm.</p>
    }
</div>

@section Scripts {
    <script>
        var isAuthenticated = '@(Session["Username"] ?? "")' !== '';

        function addToCart(productId) {
            if (!isAuthenticated) {
                if (confirm("Bạn cần đăng nhập để thêm sản phẩm vào giỏ hàng. Đăng nhập ngay?")) {
                    window.location.href = '@Url.Action("Login", "Account")';
                }
                return;
            }

            $.get('@Url.Action("AddItem", "Cart")', { id: productId, quantity: 1 }, function (res) {
                if (res && res.success) {
                    if (res.count !== undefined) {
                        $("#cart-count").text(res.count);
                    }

                    const toast = document.createElement('div');
                    toast.textContent = "✅ Đã thêm sản phẩm vào giỏ hàng!";
                    toast.style.position = "fixed";
                    toast.style.bottom = "30px";
                    toast.style.right = "30px";
                    toast.style.background = "#48bb78";
                    toast.style.color = "#fff";
                    toast.style.padding = "10px 18px";
                    toast.style.borderRadius = "8px";
                    toast.style.boxShadow = "0 2px 10px rgba(0,0,0,0.2)";
                    toast.style.zIndex = 9999;
                    document.body.appendChild(toast);
                    setTimeout(() => toast.remove(), 2000);
                } else {
                    alert("Không thể thêm sản phẩm. Vui lòng thử lại.");
                }
            }).fail(function () {
                alert("Lỗi hệ thống khi thêm sản phẩm vào giỏ.");
            });
        }
    </script>
}
