@model IEnumerable<HoangLongTH.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="products-section container mt-4">
    <h2 class="mb-3">Danh sách sản phẩm</h2>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                var img = string.IsNullOrWhiteSpace(p.ProductImage)
                    ? Url.Content("~/Content/imgs/no-image.png")
                    : Url.Content(p.ProductImage);

                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                            <img src="@img" class="card-img-top" alt="@p.ProductName"
                                 style="height:180px;object-fit:cover;" />
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" title="@p.ProductName">
                                @p.ProductName
                            </h5>
                            <p class="card-text text-muted" style="font-size: 0.9rem;">
                                @((p.ProductDecription ?? "").Length > 60
                                    ? p.ProductDecription.Substring(0, 60) + "..."
                                    : p.ProductDecription)
                            </p>
                            <div class="mt-auto">
                                <div class="fw-bold text-danger mb-2">
                                    @String.Format("{0:N0} ₫", p.ProductPrice)
                                </div>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-outline-primary btn-sm w-50"
                                       href="@Url.Action("Details", "Product", new { id = p.ProductID })">
                                        Xem chi tiết
                                    </a>
                                    <a class="btn btn-success btn-sm w-50"
                                       href="@Url.Action("AddItem", "Cart",
                                                new { id = p.ProductID, quantity = 1, area = "" })">
                                        <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Chưa có sản phẩm nào. Vui lòng thêm sản phẩm trong trang Admin.
                </div>
            </div>
        }
    </div>
</section>

